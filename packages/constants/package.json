{
  "name": "@ampedbio/constants",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external zod",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --exit-on-fatal-error",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf coverage",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "5.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "zod": "3.25.64"
  }
}