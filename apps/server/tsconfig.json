{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    // Maximum modern (Node 24 supports everything natively)
    "target": "ES2023",
    "lib": ["ES2023", "dom"],

    // Config for clean imports + compatibility with modern ESM
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react",

    // Allows imports without extension and even with .ts (useful in dev)
    "noEmit": false, // We need to emit JS for the build

    // Interop and resolution
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Maximum strictness (tRPC loves this!)
    "strict": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    // Build
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,

    // Node types (avoids unnecessary @types/node)
    "types": ["node"]
  },
  "include": ["src/**/*", "src/lib/prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}
