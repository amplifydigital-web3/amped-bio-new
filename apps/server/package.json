{
  "name": "@ampedbio/server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.19.1"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch -r dotenv/config src/index.ts",
    "build": "tsc && ts-add-js-extension --dir=dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --exit-on-fatal-error",
    "postbuild": "pnpm run prisma:migrate",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:migrate:dev": "if [ \"$NODE_ENV\" = \"production\" ]; then echo \"You are in production. Use prisma:migrate instead.\"; exit 1; fi && prisma migrate dev"
  },
  "dependencies": {
    "@ampedbio/constants": "workspace:*",
    "@aws-sdk/client-s3": "^3.802.0",
    "@aws-sdk/s3-request-presigner": "^3.802.0",
    "@prisma/client": "6.7.0",
    "@react-email/components": "^0.0.36",
    "@react-email/render": "^1.0.6",
    "@ampedbio/web3": "workspace:*",
    "@trpc/server": "^11.1.2",
    "@vercel/related-projects": "^1.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "google-auth-library": "^10.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "prisma": "^6.2.1",
    "react": "^19",
    "react-dom": "^19",
    "viem": "2.34.0",
    "zod": "3.25.64"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.3.5",
    "ts-add-js-extension": "^1.6.6",
    "tsx": "^4.19.3",
    "typescript": "5.9.2"
  }
}
