# Environment variables for client-only mode
# This file is used when running the client without a server

# Enable demo mode to use mock data instead of making actual API calls
VITE_DEMO_MODE=true

# Base URL for the API (not used in demo mode, but provided for reference)
VITE_API_URL=http://localhost:43000

# Feature flags
VITE_SHOW_REWARD=true
VITE_SHOW_CREATOR_POOL=false
VITE_SHOW_RNS=false
VITE_SHOW_GALLERY=false
