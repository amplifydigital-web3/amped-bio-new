{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@amped/web3": ["../../packages/web3/src/index.ts"]
    },
    // Maximum modern (Node 24 supports everything natively)
    "target": "ES2023",
    "lib": ["ES2023"],

    // Config for clean imports + compatibility with modern ESM
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Interop and resolution
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
